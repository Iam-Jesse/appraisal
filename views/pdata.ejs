<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div id="main">
<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Personal Data</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form class="form">
                            <div class="row">
                                <div class="col-md-8 col-12">
                                    <div class="form-group">
                                        <label for="surname">Surname</label>
                                        <input type="text" id="surname" class="form-control"
                                        name="surname">
                                    </div>
                                </div>
                                <div class="col-md-4 col-12">
                                    <div class="form-group">
                                        <label for="title">Title</label>
                                        <input type="text" id="title" class="form-control"
                                        name="title">
                                    </div>
                                </div>
                                <div class="col-md-7 col-12">
                                    <div class="form-group">
                                        <label for="other_names">Other Names</label>
                                        <input type="text" id="other_names" class="form-control"
                                        name="other_names">
                                    </div>
                                </div>
                                <div class="col-md-5 col-12">
                                    <div class="form-group">
                                        <label for="sp_number">SP Number</label>
                                        <input type="text" id="sp_number" class="form-control"
                                        name="sp_number">
                                    </div>
                                </div>
                                <div class="col-md-8 col-12">
                                    <div class="form-group">
                                        <label for="dob">Date of Birth</label>
                                        <input type="date" id="dob" class="form-control"
                                        name="dob">
                                    </div>
                                </div>
                                <div class="col-md-4 col-12">
                                    <div class="form-group row">
                                        <label for="sex">Sex</label>
                                        <div class="col-6">
                                            <input class="form-check-input" type="radio" name="sex"
                                                value="male">
                                            <label class="form-check-label" for="male">
                                                Male
                                            </label>
                                        </div>
                                        <div class="col-6">
                                            <input class="form-check-input" type="radio" name="sex"
                                                value="female">
                                            <label class="form-check-label" for="female">
                                                Female
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-12">
                                    <div class="form-group">
                                        <label for="status">Present Status</label>
                                        <input type="text" id="status" class="form-control"
                                        name="status">
                                    </div>
                                </div>
                                <div class="col-md-4 col-12">
                                    <div class="form-group">
                                        <label for="grade">Grade Level</label>
                                        <input type="text" id="grade" class="form-control"
                                        name="grade">
                                    </div>
                                </div>
                                <div class="col-md-4 col-12">
                                    <div class="form-group">
                                        <label for="salary">Salary</label>
                                        <input type="text" id="salary" class="form-control"
                                        name="salary">
                                    </div>
                                </div>
                                <div class="col-md-7 col-12">
                                    <div class="form-group">
                                        <label for="school">School</label>
                                        <input type="text" id="school" class="form-control"
                                        name="school">
                                    </div>
                                </div>
                                <div class="col-md-5 col-12">
                                    <div class="form-group">
                                        <label for="department">Department</label>
                                        <input type="text" id="department" class="form-control"
                                        name="department">
                                    </div>
                                </div>
                                <div class="col-md-7 col-12">
                                    <div class="form-group">
                                        <label for="last_status_date">Date of First Appointment</label>
                                        <input type="date" id="last_status_date" class="form-control"
                                        name="last_status_date">
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit"
                                        class="btn btn-primary me-1 mb-1">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</div>

<%- include('partials/footer') %>